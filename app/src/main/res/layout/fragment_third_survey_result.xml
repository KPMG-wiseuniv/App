<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:visibility="visible"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ThirdSurveyFragment_Charge">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="All of your survey is completed\nCan we recommend the items on this condition?"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="9"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/result_furniture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/white_2"
            android:gravity="center"
            android:text="Furniture"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/white_2"
            android:text="that less than"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="36"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/white_2"
            android:text="$"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/result_charge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@color/white_2"
            android:gravity="center"
            android:text="price"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:background="@color/white_2"
            android:text="and has good"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="36"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/result_function"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@color/white_2"
            android:gravity="center"
            android:text="design"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white_2"
            android:text="in"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/result_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:background="@color/white_2"
            android:text="style"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/white_2"
            android:text="style."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/ok_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:text="OK!"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/darkgray"></Button>

        <Button
            android:id="@+id/again_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Survey Again!"
            android:textSize="17sp"
            android:backgroundTint="@color/black"></Button>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/logo_white"
        android:paddingTop="25dp"
        android:scaleType="fitCenter"/>

</LinearLayout>